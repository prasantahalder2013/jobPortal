<div class="row"> 
  <h2>Vacancy List</h2>
  <% if @vacancies.present? %>          
	  <table class="table table-bordered">
	    <thead>
	      <tr>
	        <th>Title</th>
	        <th>Details</th>
	        <th>Experience</th>
	        <th>Required Skills</th>
	        <th>Number Of Vacancies</th>
	        <th>Organization Name</th>
	        <th>Approve</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @vacancies.each do |vacancy| %>
	      <tr>
	        <td><%= vacancy.title %></td>
	        <td><%= vacancy.details %></td>
	        <td><%= vacancy.experience %></td>
	        <td><%= vacancy.required_skills %></td>
	        <td><%= vacancy.no_of_vacancies %></td>
	        <td><%= vacancy.organization.name %></td>
	        <td>
	        	<% if vacancy.is_approved %>
	        	  Approved
	        	<% else %>
	        		<%= link_to "Approve", admins_vacancy_path(id: vacancy.id) , method: :put, class: "btn btn-primary" %>
	        	<% end %>
	        </td>
	      </tr>
	      <% end %>
	    </tbody>
	  </table>
  <% else %>
  	<p>No Data Found</p>
  <% end %>
</div>